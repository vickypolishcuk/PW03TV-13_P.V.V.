<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="1dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Середньодобова потужність (Pc):" />

            <EditText
                android:id="@+id/number_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="text" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Середньоквадратичне відхилення (σ):" />

            <EditText
                android:id="@+id/number_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="text" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Зменшене середньоквадратичне відхилення (σ):" />

            <EditText
                android:id="@+id/number_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="text" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Вартість електроенергії (B):" />

            <EditText
                android:id="@+id/number_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="text" />


            <TextView
                android:id="@+id/textViewProfit1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Прибуток 1: " />

            <TextView
                android:id="@+id/profit_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textViewPenalty1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Штраф 1: " />

            <TextView
                android:id="@+id/penalty_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textViewTotalProfit1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Відповідь: прибуток становитиме" />

            <TextView
                android:id="@+id/total_profit_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textViewProfit2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Прибуток 2: " />

            <TextView
                android:id="@+id/profit_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textViewPenalty2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Штраф 2: " />

            <TextView
                android:id="@+id/penalty_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textViewTotalProfit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Відповідь: прибуток становитиме" />

            <TextView
                android:id="@+id/profit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/res_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Обчислити" />

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>